# Used to re-render every boot so the service starts
{% raw %}
# Boot ID - {{ file "/proc/sys/kernel/random/boot_id" }}
{% endraw %}
{{- with pkiCert "pki_openstack_postgres_intermediate/issue/user-nova" "common_name=nova" -}}
{{ .Cert }}{{ .CA }}{{ .CAChain }}{{ .Key }}
{{ .Key | writeToFile "/etc/nova/postgres-user-nova.key" "" "" "0600" }}
{{ (printf "%s%s" .Cert (.CAChain | join "")) | writeToFile "/etc/nova/postgres-user-nova.crt" "" "" "0644" }}
{{- end -}}