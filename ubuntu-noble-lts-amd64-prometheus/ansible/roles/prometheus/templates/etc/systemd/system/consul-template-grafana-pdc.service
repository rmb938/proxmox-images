# {{ ansible_managed }}

[Unit]
Description="consul-template-grafana-pdc"
Requires=network-online.target

# we need the main vault agent
Wants=vault.service consul-template-consul.service

After=network-online.target

# we need the main vault agent
After=vault.service consul-template-consul.service

ConditionFileNotEmpty=/etc/consul-template/consul-template-grafana-pdc.hcl
StartLimitIntervalSec=60
StartLimitBurst=3

[Service]
Type=notify

# override since we want this agent to run as consul user & group
User=grafana-pdc
Group=grafana-pdc

ProtectSystem=full
ProtectHome=read-only
PrivateTmp=yes

# allow writing to /etc/grafana-pdc/
ReadWritePaths=/etc/grafana-pdc/

# override to allow agent to sudo
PrivateDevices=no

SecureBits=keep-caps

# override to allow agent to sudo
CapabilityBoundingSet=CAP_SYSLOG CAP_SYS_RESOURCE CAP_SETGID CAP_SETUID CAP_AUDIT_WRITE

# override to allow agent to sudo
NoNewPrivileges=no

ExecStart=/usr/bin/consul-template -config=/etc/consul-template/consul-template-grafana-pdc.hcl
ExecReload=/bin/kill --signal HUP $MAINPID
KillMode=process
KillSignal=SIGINT
Restart=on-failure
RestartSec=5
TimeoutStopSec=30
LimitNOFILE=65536
LimitMEMLOCK=infinity
LimitCORE=0

[Install]
WantedBy=multi-user.target
