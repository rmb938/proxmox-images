<!-- {{ ansible_managed }} -->

<clickhouse>
    <logger>
        <level>information</level>
    </logger>

    <listen_host>::</listen_host>
    <mysql_port remove="1"/>
    <postgresql_port remove="1"/>

    <zookeeper>
        <!-- TODO: idk if this needs to be a full list of nodes or not -->
        <node>
        <host>clickhouse-keeper.service.consul</host>
        <port>9181</port>
        </node>
    </zookeeper>

    <prometheus>
        <endpoint>/metrics</endpoint>
        <port>9363</port>
        <metrics>true</metrics>
        <events>true</events>
        <asynchronous_metrics>true</asynchronous_metrics>
        <errors>true</errors>
    </prometheus>
</clickhouse>